!!!
%html
	%head
		%title= content_for?(:title) ? yield(:title) : "Word For Word"
		%meta{:charset => "utf-8"}
		%meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
		%meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
		= stylesheet_link_tag :application, :media => "all"
		= javascript_include_tag :application
		= csrf_meta_tags
	%body
		#wrapper
			#header
				%ul#nav
					%li
						- if session[:username]
							%a{:href => users_logout_path}
								Logout
						- else
							%a{:href => users_login_path}
								Login
						- unless session[:username]
							%li
								%a{:href => new_user_path}
									Register
					%li
						%a{:href => words_search_path}
							Search
					- if session[:username]
						%li
							%a{:href => words_new_path}
								Add New Word
					%li
						%a{:href => root_path}
							Home

				%h1
					%a{:href => home_index_path} Word for Word
				
			= yield

		#footer
			%p &copy; 2013 Ian Dahlberg
			%p Made with Ruby on Rails, Coffeescript, HAML &amp; SASS









